<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/editable_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:hint="Item"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/typeEditText"
        android:layout_alignStart="@+id/typeEditText"
        android:layout_alignRight="@+id/typeEditText"
        android:layout_alignEnd="@+id/typeEditText" />



        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_alignBaseline="@+id/btnView"
            android:layout_alignBottom="@+id/btnView"
            android:layout_toLeftOf="@+id/btnView"
            android:layout_toStartOf="@+id/btnView" />


        <Button
            android:id="@+id/btnView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Data"
            android:layout_marginRight="93dp"
            android:layout_marginEnd="93dp"
            android:layout_below="@+id/expiryEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="51dp" />

    <EditText
        android:id="@+id/typeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editable_item"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Type"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/quantityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/typeEditText"
        android:layout_alignStart="@+id/typeEditText"
        android:layout_below="@+id/typeEditText"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/expiryEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Expiry"
        android:inputType="textPersonName"
        android:layout_below="@+id/quantityEditText"
        android:layout_alignLeft="@+id/quantityEditText"
        android:layout_alignStart="@+id/quantityEditText" />


</RelativeLayout>